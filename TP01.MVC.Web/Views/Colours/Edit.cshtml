@model ColourViewModel
@{
    ViewData["Title"] = "Editar un color";
}
<form method="post" asp-controller="Colours" asp-action="Edit">
    <input type="hidden" asp-for="ColourId" />
    <h3>Editar un color:</h3>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <div class="mb-3">
            <label asp-for="ColourName" class="form-control"></label>
            <input asp-for="ColourName" type="text" class="form-control" />
            <span asp-validation-for="ColourName" class="text-danger"></span>
        </div>
        <button class="btn btn-outline-success">
            Guardar
        </button>
        <a asp-controller="Colours" asp-action="Index" class="btn btn-outline-secondary">
            Volver a la lista
        </a>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}